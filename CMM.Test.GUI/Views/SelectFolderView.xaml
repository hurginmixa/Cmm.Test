<Window x:Name="SelectedFolderWindow" x:Class="CMM.Test.GUI.Views.SelectFolderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Selection" 
        SizeToContent="WidthAndHeight"
        xmlns:local="clr-namespace:CMM.Test.GUI.Views"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Width" Value="260" />
            <Setter Property="Margin" Value="5,5,20,5" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Black" />
        </Style>
    </Window.Resources>

    <Grid Name="MainGrid" Margin="0,5,0,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6.612"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Job:" Margin="5,5,5,5" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Row="0" Grid.Column="2" ItemsSource="{Binding Jobs}" SelectedItem="{Binding SelectedJob, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Setup:" Margin="5,5,5,5" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Row="1"  Grid.Column="2" ItemsSource="{Binding Setups}" SelectedItem="{Binding SelectedSetup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Lot:" Grid.Row="2" Grid.Column="0" Margin="5,5,5,5" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Row="2"  Grid.Column="2" ItemsSource="{Binding Lots}" SelectedItem="{Binding SelectedLot, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Wafer:" Grid.Row="3"  Grid.Column="0" Margin="5,5,5,5" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Row="3"  Grid.Column="2" ItemsSource="{Binding Wafers}" SelectedItem="{Binding SelectedWafer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5" Grid.Column="0" Grid.ColumnSpan="3" >
            <Button Content="OK" Width="80" Margin="5" Command="{Binding OkCommand}"  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Margin="5" Command="{Binding CancelCommand}"  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>